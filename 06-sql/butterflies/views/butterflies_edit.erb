<h2>Edit Butterfly</h2>
<form action="/butterflies/<%= @butterfly['id'] %>" method="post">

  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="<%= @butterfly['name'] %>"><br>
  <label for="family">Family:</label>
  <input type="text" id="family" name="family" value="<%= @butterfly['family'] %>"><br>
  <label for="image">Image:</label>
  <input type="url" id="image" name="image" value="<%= @butterfly['image'] %>"><br>

  <label for="plant_id">Larval plant:</label>
  <select name="plant_id" id="plant_id">
    <option></option>
    <% Plant.all.each do |plant| %>
      <option value="<%= plant.id %>" <%= "selected" if @butterfly.plant_id == plant.id %>>
        <%= plant.name %>
      </option>
    <% end %>
  </select><br>

  <button>Update butterfly</button>

</form>
